{
  "name": "laboratory-group-xmask",
  "version": "1.0.0",
  "description": "Laboratory Group Xmas Page",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:lint": "stylelint src/scss/*.scss --syntax scss || true",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "build:images": "imagemin src/images/**/* --out-dir=dist/images",
    "build:js": "webpack --mode=production",
    "build:media": "webpack --mode=production",
    "build:html": "posthtml -c posthtml.json",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "watch:media": "onchange \"src/media\" -- webpack --mode=development",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "build": "run-p build:*",
    "watch": "run-p serve watch:*",
    "serve": "browser-sync start --server \"dist\" --files \"dist\""
  },
  "keywords": [
    "laboratory",
    "group",
    "xmas",
    "xmask",
    "christmas",
    "happy",
    "holidays",
    "mask",
    "covid"
  ],
  "author": "beahuszar",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.12.11",
    "autoprefixer": "^10.1.0",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.13",
    "eslint": "^7.16.0",
    "eslint-loader": "^4.0.2",
    "file-loader": "^6.2.0",
    "htmlnano": "^0.2.8",
    "imagemin-cli": "^6.0.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "posthtml": "^0.15.1",
    "posthtml-cli": "^0.9.1",
    "posthtml-modules": "^0.6.4",
    "stylelint": "^13.8.0",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0"
  }
}
